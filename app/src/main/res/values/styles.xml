<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorBaseText</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:statusBarColor">@color/colorBackgroundActionBar</item>
    </style>

    <style name="BaseButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorBaseText</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CategoryTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBaseText</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBaseText</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="counterTextAppearance">@style/HintText</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/colorBaseText</item>
        <item name="android:textColorHint">@color/colorBaseText</item>
        <item name="colorControlNormal">@color/colorBaseText</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBaseText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleActionBar" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextActionBar</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorTextActionBar</item>
        <item name="actionMenuTextColor">@color/colorTextActionBar</item>
        <item name="android:textColorSecondary">@color/colorTextSecondaryActionBar</item>
        <item name="android:background">@color/colorBackgroundActionBar</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/colorBackgroundBottomNavBar</item>
        <item name="android:textColor">@color/colorTextBottomNavBar</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:backgroundTint">@color/colorDivider</item>
    </style>

</resources>
